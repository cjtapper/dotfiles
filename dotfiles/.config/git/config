[include]
  path = personal
  path = work

[advice]
  statusHints = false

[alias]
  co = checkout
  st = status

[core]
  pager = delta

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse

[color "status"]
  added = green
  changed = yellow
  untracked = red

[delta]
  navigate = true

[diff]
  colorMoved = default

[help]
  autoCorrect = immediate

[init]
  defaultBranch = main
  templatedir = ~/.config/git/template

[interactive]
  diffFilter = delta --color-only

[merge]
  autoStash = true
  conflictstyle = diff3

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[rebase]
  autoStash = true
