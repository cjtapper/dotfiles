[include]
  path = personal
  path = work

[advice]
  statusHints = false

[alias]
  co = checkout
  st = status
  aa = add --all
  switch-recent = !git branch --sort=-committerdate --format='%(refname:short)' | fzf --preview='git log --date=relative --color $(git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@')..{}'| xargs git switch
  rm-merged = !git branch --format '%(refname:short) %(upstream:track)' | awk '$2 == \"[gone]\" { print $1 }' | xargs -r git branch -D

[branch]
  sort = -committerdate

[core]
  pager = delta

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse

[color "status"]
  added = green
  changed = yellow
  untracked = red

[delta]
  navigate = true

[diff]
  algorithm = histogram
  colorMoved = default

[fetch]
  prune = true

[help]
  autoCorrect = immediate

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  autoStash = true
  conflictstyle = diff3

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[rebase]
  autoStash = true
